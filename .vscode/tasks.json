{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Create pytest",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/python3_tests/"
            },
            "command": "./createtest.sh ${input:leetcode_problem_id}",
            "windows": {
                "command": "bash createtest.sh ${input:leetcode_problem_id}",
            },
            "problemMatcher": [],
        },
        {
            "label": "Create c++ leetcode google tests",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/cpp_tests/"
            },
            "command": "./createtest.sh ${input:leetcode_problem_id}",
            "windows": {
                "command": "bash createtest.sh ${input:leetcode_problem_id}",
            },
            "problemMatcher": [],
        },
        {
            "label": "Create c++ leetcode main entry point file",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/cpp/"
            },
            "command": "./createmain.sh ${input:leetcode_problem_id}",
            "windows": {
                "command": "bash createmain.sh ${input:leetcode_problem_id}",
            },
            "problemMatcher": [],
        }
    ],
    "inputs": [
        {
            "id": "leetcode_problem_id",
            "description": "leetcode problem id",
            "type": "promptString"
        },
    ],
    "version": "2.0.0"
}